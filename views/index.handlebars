<div class="container">
  <div class="eat-da-burger text-center">
    <h1>Eat-da-Burger!</h1>
    <img src="/assets/img/burger.png" alt="burgerimg" width="" height="" class="burgerimg">
  </div>

  <div class="add text-center">
    <h3>Add a Burger</h3>
    <form class="create-form">
      <div class="form-group">
        <input required type="text" id="newburger" name="name" placeholder="Burger's name">
        <button type="submit" class="buttons btn-success">Add</button>
      </div>
    </form>
  </div>

  <div class="row">
    <div class="my-burgers text-center col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <h3>My Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <p>
            {{this.burger_name}}
            <button class="buttons btn-danger eat-burger" data-id="{{id}}"
              data-devouredState="{{devoured}}">Devour</button>
            <button data-id="{{id}}" class="delete-burger buttons btn-dark">Delete</button>
          </p>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="devored-burgers text-center col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <h3>Devoured Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <p>
            {{this.burger_name}}
            <button data-id="{{id}}" class="delete-burger buttons btn-dark">Delete</button>
          </p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>